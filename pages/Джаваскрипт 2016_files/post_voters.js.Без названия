}
figure .vote.minus {
	background: url(#$2#/i/add_images.png) 0 -130px no-repeat;
}
#vse {
	border-collapse: collapse;
}
#vse tbody {
	display: block;
	max-height: 40em !important;
	overflow-x: hidden;
	overflow-y: auto;
}
